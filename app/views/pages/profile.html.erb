<div class="max-w-3xl w-full mx-auto bg-white shadow-md rounded-lg p-6">
  <h1 class="text-2xl font-bold mb-4">Профиль пользователя</h1>

  <section class="mb-6">
    <h2 class="text-xl font-semibold mb-2">Данные аккаунта</h2>
    <dl class="space-y-3">
      <div class="flex">
        <dt class="w-32 font-medium">Логин:</dt>
        <dd><%= current_user.name %></dd>
      </div>
      <div class="flex">
        <dt class="w-32 font-medium">Email:</dt>
        <dd><%= current_user.email %></dd>
      </div>
    </dl>
  </section>

  <section class="mb-6">
    <h2 class="text-xl font-semibold mb-2">Сменить пароль</h2>
    <%= form_with url: password_update_path, method: :patch, local: true, data: { turbo: false } do |f| %>
      <div class="space-y-4">
        <div>
          <%= f.label :current_password, "Старый пароль", class: "block text-sm font-medium" %>
          <%= f.password_field :current_password,
                               class: "mt-1 block max-w-md w-full border-gray-300 rounded-md border border-gray-300",
                               required: true %>
        </div>
        <div>
          <%= f.label :new_password, "Новый пароль", class: "block text-sm font-medium" %>
          <%= f.password_field :new_password,
                               class: "mt-1 block max-w-md w-full border-gray-300 rounded-md border border-gray-300",
                               required: true %>
        </div>
        <div>
          <%= f.label :new_password_confirmation, "Подтвердите новый пароль", class: "block text-sm font-medium" %>
          <%= f.password_field :new_password_confirmation,
                               class: "mt-1 block max-w-md w-full border-gray-300 rounded-md border border-gray-300",
                               required: true %>
        </div>
      </div>
      <div class="mt-6">
        <%= f.submit "Сохранить новый пароль",
                     class: "inline-block bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition" %>
      </div>
    <% end %>
  </section>
</div>