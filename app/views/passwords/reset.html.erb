<div class="flex items-start justify-center min-h-screen pt-55 bg-gray-300">
  <div class="max-w-md w-full bg-white rounded-lg shadow-md p-6">
    <h1 class="text-2xl font-bold mb-4">Восстановление пароля</h1>

    <%= form_with url: password_reset_path, local: true, data: { turbo: false }, class: "space-y-4" do %>

      <div>
        <%= label_tag :email, "Ваш e-mail", class: "block text-sm font-medium text-gray-700" %>
        <%= email_field_tag :email,
                            params[:email],
                            required: true,
                            class: "mt-1 block w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div class="pt-4">
        <%= submit_tag "Отправить письмо",
                       class: "w-full px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>
    <% end %>
  </div>
</div>